{
  "name": "frourio",
  "version": "0.0.0",
  "description": "Fast and type-safe full stack framework, for TypeScript",
  "author": "Solufa <solufa2020@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin/index.js",
  "homepage": "https://frourio.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frouriojs/frourio.git"
  },
  "bugs": {
    "url": "https://github.com/frouriojs/frourio/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "aspida",
    "fastify"
  ],
  "scripts": {
    "dev": "npm run build && cd servers && aspida && node build.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "lint": "eslint --ext .js,.ts . && prettier --check \"./**/*.ts\"",
    "lint:fix": "eslint --ext .js,.ts . --fix && prettier --write \"./**/*.ts\"",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "dependencies": {
    "aspida": "^1.14.0",
    "velona": "^0.8.0"
  },
  "devDependencies": {
    "@aspida/axios": "^1.14.0",
    "@aspida/node-fetch": "^1.14.0",
    "@fastify/multipart": "^8.3.0",
    "@types/busboy": "^1.5.4",
    "@types/node-fetch": "^2.6.11",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "axios": "^1.7.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.5.1",
    "eslint-plugin-standard": "^5.0.0",
    "fastify": "^4.28.1",
    "node-fetch": "^2.6.12",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.3",
    "zod": "^3.23.8"
  }
}
